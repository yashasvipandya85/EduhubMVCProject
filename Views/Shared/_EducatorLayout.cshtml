<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eduhub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        /* Custom styles for header */
        .navbar-light .navbar-nav .nav-link {
            color: white !important;
        }
        .btn-danger {
            background-color: red;
            color: white;
        }
        .btn-danger:hover {
            background-color: darkred;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Dashboard Header -->
    <header class="navbar navbar-expand-lg navbar-light bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="color: white;">Eduhub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dashboardNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="dashboardNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-action="Profile" asp-controller="User">Profile</a></li>
                    
                      <li class="nav-item">
                    <a class="nav-link text-white" asp-action="Index" asp-controller="Course">All Courses</a>
                </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-action="CoursesByUser" asp-controller="Course">My Courses</a></li>
                    <!--<li class="nav-item"><a class="nav-link text-white" asp-action="CourseEnrollments" asp-controller="Enrollment">My Enrollments</a></li>-->
                    
                     <li class="nav-item"><a class="nav-link text-white" asp-action="CourseEnquiries" asp-controller="Enquiry">Enquiries</a></li>
                    
                    <li class="nav-item"><a class="nav-link text-white" asp-action="CourseFeedbacks" asp-controller="Feedback">Feedback</a></li>
                </ul>
                <form class="d-flex">
                    <button class="btn btn-danger" type="button" onclick="location.href='/User/Index'">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
