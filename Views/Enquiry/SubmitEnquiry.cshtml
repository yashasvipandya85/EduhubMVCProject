    <form asp-action="SubmitEnquiry" method="post">
        <div class="form-group">
            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <textarea asp-for="Message" class="form-control" required></textarea>
        </div>
        <input asp-for="CourseId" type="hidden" value="@Model.CourseId" />
        <input asp-for="UserId" type="hidden" value="@Model.UserId" />
        <div>
            <button type="submit" class="btn btn-primary">Submit Enquiry</button>
        </div>
    </form>
</div>
