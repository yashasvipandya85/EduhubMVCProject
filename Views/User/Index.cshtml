@{
    ViewData["Title"] = "User";
}

<!-- Hero Section -->
<section class="hero bg-light py-5 text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to Eduhub Portal</h1>
        <p class="lead">Your one-stop platform for educators and students to connect, learn, and grow.</p>
        <a href="/User/Register" class="btn btn-primary btn-lg">Join Now</a>
    </div>
</section>

<!-- Feature Section -->
<section class="features py-5">
    <div class="container text-center">
        <h2 class="mb-4 fw-bold">Why Choose Eduhub?</h2>
        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-person-workspace fs-1 text-primary"></i>
                        </div>
                        <h5 class="card-title">Interactive Learning</h5>
                        <p class="card-text">Engage in a personalized and interactive learning experience with expert educators.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-laptop fs-1 text-success"></i>
                        </div>
                        <h5 class="card-title">Seamless Access</h5>
                        <p class="card-text">Access educational resources and materials anytime, anywhere.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-graph-up-arrow fs-1 text-danger"></i>
                        </div>
                        <h5 class="card-title">Track Progress</h5>
                        <p class="card-text">Monitor your learning progress and achieve your educational goals efficiently.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
