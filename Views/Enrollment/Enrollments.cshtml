@model IEnumerable<Eduhub_MVC_Project.Models.Enrollment>

@{
    ViewData["Title"] = "My Enrollments";
    Layout = "~/Views/Shared/_StudentLayout.cshtml"; // Using student layout
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">My Enrollments</h2>
    @if (!Model.Any())
    {
        <p>You have not enrolled in any courses yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course Title</th>
                    <th>Enrollment Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.Course.Title</td>
                        <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                        <td>@enrollment.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

