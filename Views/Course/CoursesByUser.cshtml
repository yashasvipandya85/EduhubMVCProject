@model IEnumerable<Eduhub_MVC_Project.Models.Course>

@{
    ViewData["Title"] = "Courses by User";
    Layout = "~/Views/Shared/_EducatorLayout.cshtml";
}

<div class="container mt-4">
    <h2>Courses by User</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">@course.Title</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Course ID: @course.CourseId</h6>
                            <p class="card-text">@course.Description</p>
                            <p class="card-text"><strong>Start Date:</strong> @course.CourseStartDate.ToString("yyyy-MM-dd")</p>
                            <p class="card-text"><strong>End Date:</strong> @course.CourseEndDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-warning">Edit</a>
                            <a asp-action="Create" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-danger">Add</a>
                            <a asp-action="CourseMaterials" asp-controller="Material" asp-route-courseId="@course.CourseId" class="btn btn-secondary">Materials</a>
                            <a asp-action="CourseEnrollments" asp-controller="Enrollment" asp-route-courseId="@course.CourseId" class="btn btn-primary">View Enrollments</a> <!-- New Link to View Enrollments -->
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No courses found for this user.</p>
    }
</div>


